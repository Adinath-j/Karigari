{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },               
    { "src": "/(.*)", "dest": "/index.html" } 
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://karigari-2xcq.onrender.com/api"
  }
}
